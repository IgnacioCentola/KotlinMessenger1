<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@android:color/holo_green_light">
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextEmailLogin"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            android:background="@drawable/rounded_edit" android:hint="Email"
            android:paddingLeft="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2"


    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextPasswordLogin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmailLogin"
            app:layout_constraintStart_toStartOf="@+id/editTextEmailLogin"
            app:layout_constraintEnd_toEndOf="@+id/editTextEmailLogin"
            android:paddingLeft="16dp"
            android:hint="Password" android:background="@drawable/rounded_edit"/>
    <Button
            android:text="Log in"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLogin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPasswordLogin"
            app:layout_constraintStart_toStartOf="@+id/editTextPasswordLogin"
            app:layout_constraintEnd_toEndOf="@+id/editTextPasswordLogin"
            android:background="@drawable/rounded_button"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2" app:layout_constraintGuide_begin="178dp"
                                                android:orientation="horizontal"/>
    <TextView
            android:text="@string/back_to_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBackToRegis" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
            app:layout_constraintStart_toStartOf="@+id/buttonLogin"
            app:layout_constraintEnd_toEndOf="@+id/buttonLogin" android:textColor="@android:color/white"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>